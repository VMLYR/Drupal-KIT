        field_name: reference.field.field_name,
        field_type: reference.field.field_type,
        bem_field_modifiers: reference.field.bem_field_modifiers,
        bem_field_extra: reference.field.bem_field_extra,
        attributes: reference.field.field_attributes,
        label_display: reference.field.label_display,
        video_content: reference.field.video_content
      } %}

