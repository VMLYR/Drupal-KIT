{# menu_clickthrough field #}
{% embed "@%theme_prefix%-atoms/00-field/_field.twig" with {
  label: label,
  label_hidden: label_hidden,
  field_name: field_name,
  field_type: field_type,
  bem_field_modifiers: bem_field_modifiers,
  bem_field_extra: bem_field_extra,
  attributes: attributes,
  field_name: field_name,
  items: items,
  multiple: multiple,
} %}

  {% block field_content %}

    {% embed "@%theme_prefix%-atoms/menu-clickthrough/_menu-clickthrough-overview.twig" with {
      items: items,
    } %}

      {% block overview_items %}
        {% for item in items %}
          {% embed "@%theme_prefix%-atoms/menu-clickthrough/_menu-clickthrough-item.twig" with {
            image: item.image,
            title: item.title,
            link: item.link,
          } %}
            {% block item_image %}
              {% include "@%theme_prefix%-atoms/04-images/styleguide/blazy.twig" with {
                label_display: item.image.label_display,
                field_name: item.image.field_name,
                field_type: item.image.field_type,
                field_attributes: item.image.field_attributes,
                settings: item.image.settings,
                bem_field_modifiers: item.image.bem_field_modifiers,
                bem_field_extra: item.image.bem_field_extra,
                blazy_bem_block: item.image.blazy_bem_block,
                blazy_bem_modifiers: item.image.blazy_bem_modifiers,
                blazy_attributes: item.image.blazy_attributes,
                image_src: item.image.image_src,
                image_alt: item.image.image_alt,
                image_bem_modifiers: item.image.image_bem_modifiers,
                image_bem_extra: item.image.image_bem_extra,
                attributes: item.image.image_attributes,
              } %}
            {% endblock %}

            {% block item_title %}
              <a href="#" aria-label="Read more about {{ item.title }}">{{ title }}</a>
            {% endblock %}

            {% block item_description %}
              {{ item.description | raw }}
            {% endblock %}

            {% block item_link %}
              <a href="#" aria-label="Read more about {{ item.title }}">Read more about {{ item.title }}</a>
            {% endblock %}

          {% endembed %}
        {% endfor %}
      {% endblock %}

    {% endembed %}

  {% endblock %}

{% endembed %}

{# /End menu_clickthrough field #}
