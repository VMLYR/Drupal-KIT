            {% endblock %}

          {% endembed %}


          {% embed "@%theme_prefix%-templates/styleguide/section/one-col.twig" with {
            label: page.content.layouts.contents.label,
            template: page.content.layouts.contents.template,
            minimal_styling: page.content.layouts.contents.minimal_styling,
            region_type: page.content.layouts.contents.region_type,
            modifier: page.content.layouts.contents.modifier,
            extra_classes: page.content.layouts.contents.extra_classes,
            settings: page.content.layouts.contents.settings,
            content: page.content.layouts.contents.content,
