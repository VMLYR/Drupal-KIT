{% embed "@%theme_prefix%-pages/page/_page--master.twig" with {} %}

  {% block pageTabs %}
    {% include "@%theme_prefix%-molecules/menus/styleguide/tabs.twig" with {
      menu_block_bem_block: tabs.menu_block_bem_block,
      menu_block_bem_element: tabs.menu_block_bem_element,
      menu_block_bem_modifiers: tabs.menu_block_bem_modifiers,
      menu_block_bem_extra: tabs.menu_block_bem_extra,
      primary: tabs.primary,
      items: tabs.items,
      has_link_title: tabs.has_link_title,
      label: tabs.label,
      configuration: tabs.configuration,
    } %}
  {% endblock %}

  {% block header %}
    {% include "@%theme_prefix%-organisms/header/styleguide/header.twig" %}
  {% endblock %}

  {% block pageContent %}
    <!-- System Block: holding the page node -->
    <div class="block block--provider-system block--system-main-block block--region-content block-system" aria-label="Main page content">

       <!-- Page node -->
      {% embed "@%theme_prefix%-organisms/00-node/_node.twig" with {
        view_mode: page.view_mode,
        isPromoted: page.isPromoted,
        isSticky: page.isSticky,
        bundle: page.bundle,
      } %}
        {% block node_content %}

          <!-- Layout templates (for Layout Builder):
                in our Drupal front-end, the templates are loaded from the Rocketship Core module, but we can use custom ones as well
                for this Storybook example, I'm loading custom ones that are (almost) identical to the Core ones
                because it's easier than building a path to the modules
          -->

          {# Section: header #}
          {% embed "@%theme_prefix%-templates/styleguide/section/one-col.twig" with {
            label: page.content.layouts.header.label,
            template: page.content.layouts.header.template,
            minimal_styling: page.content.layouts.header.minimal_styling,
            region_type: page.content.layouts.header.region_type,
            modifier: page.content.layouts.header.modifier,
            extra_classes: page.content.layouts.header.extra_classes,
            settings: page.content.layouts.header.settings,
            content: page.content.layouts.header.content,
          } %}

            {% block section_content %}

              {# Visual #}
              {# {% include "@%theme_prefix%-molecules/visual/styleguide/visual.twig" with {
