                bem_block_modifiers: page.content.blocks.usp.bem_block_modifiers,
                fields: page.content.blocks.usp.fields,
              } %} #}

            {% endblock %}

            {% block second_main %}
              {# TO DO: replace with Text CB or custom block
              #}
              {# {% include "@%theme_prefix%-molecules/content/styleguide/content.twig" with {
                label: page.content.blocks.content.label,
                configuration: page.content.blocks.content.configuration,
                bem_block_modifiers: page.content.blocks.content.bem_block_modifiers,
                paragraph: page.content.blocks.content.paragraph,
              } %} #}

            {% endblock %}

          {% endembed %}


          {# Section: blog and events #}
          {% embed "@%theme_prefix%-templates/styleguide/section/two-col.twig" with {
            label: page.content.layouts.blog_event.label,
            template: page.content.layouts.blog_event.template,
            minimal_styling: page.content.layouts.blog_event.minimal_styling,
            region_type: page.content.layouts.blog_event.region_type,
            modifier: page.content.layouts.blog_event.modifier,
            extra_classes: page.content.layouts.blog_event.extra_classes,
            settings: page.content.layouts.blog_event.settings,
            content: page.content.layouts.blog_event.content,
          } %}

            {% block first_main %}

              {# {% include "@%theme_prefix%-blog-organisms/styleguide/blog-overview.twig" with {
                label: page.content.blocks.blog.overview.label,
                configuration: page.content.blocks.blog.overview.configuration,
                bem_block_modifiers: page.content.blocks.blog.overview.bem_block_modifiers,
                paragraph: page.content.blocks.blog.overview.paragraph,
