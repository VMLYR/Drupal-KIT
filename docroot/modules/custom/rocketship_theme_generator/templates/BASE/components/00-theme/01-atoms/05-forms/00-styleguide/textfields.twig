  <div id="ajax-wrapper--3">
    {% include "@%theme_prefix%-atoms/05-forms/00-styleguide/upload-file.twig" with {
      managed: managed_file_shown.managed,
      file_shown: managed_file_shown.file_shown,
      form_element: managed_file_shown.form_element,
      label: managed_file_shown.label,
      upload: managed_file_shown.upload,
      input: managed_file_shown.input,
    } %}
