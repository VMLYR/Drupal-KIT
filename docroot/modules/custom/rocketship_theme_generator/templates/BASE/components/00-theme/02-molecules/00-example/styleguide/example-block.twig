<pre>
Example of some data:
label: {{ dump(label) }}
{% if drupalSettings is defined and drupalSettings %} drupalSettings: {{ dump(drupalSettings) }}{% endif %}
</pre>

{# embedding a Twig file lets you combine the functionality of 'include' (like passing parameters)
    with 'extends' (overriding blocks from this master template)
#}
{% embed "@%theme_prefix%-molecules/00-block/_block.twig" with {
    label: label,
    configuration: configuration,
    bem_block_modifiers: bem_block_modifiers,
  } %}

   {% block block_content %}

      {# title field #}
      {% include "@%theme_prefix%-atoms/02-text/00-headings/styleguide/heading-field.twig" with {
          label: fields.title.label,
          label_hidden: fields.title.label_hidden,
          field_name: fields.title.field_name,
          field_type: fields.title.field_type,
          bem_field_modifiers: fields.title.bem_field_modifiers,
          bem_field_extra: fields.title.bem_field_extra,
          attributes: fields.title.attributes,
          heading_display: fields.title.heading_display,
          heading_level: fields.title.heading_level,
          heading: fields.title.heading,
          heading_id: fields.title.heading_id,
          heading_url: fields.title.heading_url,
          bem_heading_block : fields.title.heading_block,
          bem_heading_element : fields.title.heading_element,
        }
      %}
      {# /End title field #}


      {# teaser field #}
      {% embed "@%theme_prefix%-atoms/00-field/_field.twig" with {
        label: fields.teaser.label,
        label_hidden: fields.teaser.label_hidden,
        field_name: fields.teaser.field_name,
        field_type: fields.teaser.field_type,
        bem_field_modifiers: fields.teaser.bem_field_modifiers,
        bem_field_extra: fields.teaser.bem_field_extra,
        attributes: fields.teaser.attributes,
      } %}

        {% block field_content %}

          {{ fields.teaser.content | raw }}

        {% endblock %}

      {% endembed %}
      {# /End teaser field #}

      {# responsive image field, with blazy #}
      {% embed "@%theme_prefix%-atoms/00-field/_field.twig" with {
        field_name: fields.image.field_name,
        field_type: fields.image.field_type,
        bem_field_modifiers: fields.image.bem_field_modifiers,
        bem_field_extra: fields.image.bem_field_extra,
        attributes: fields.image.field_attributes,
        label_display: fields.image.label_display,
      } %}

        {% block field_content %}
          {% include "@%theme_prefix%-atoms/04-images/styleguide/blazy-responsive.twig" with {
            label_display: fields.image.label_display,
            field_name: fields.image.field_name,
            field_type: fields.image.field_type,
            field_attributes: fields.image.field_attributes,
            settings: fields.image.settings,
            bem_field_modifiers: fields.image.bem_field_modifiers,
            bem_field_extra: fields.image.bem_field_extra,
            blazy_bem_block: fields.image.blazy_bem_block,
            blazy_bem_modifiers: fields.image.blazy_bem_modifiers,
            blazy_attributes: fields.image.blazy_attributes,
            image_src: fields.image.image_src,
            image_alt: fields.image.image_alt,
            image_srcset: fields.image.image_srcset,
            image_loading: fields.image.image_loading,
            image_sizes: fields.image.image_sizes,
            image_bem_modifiers: fields.image.image_bem_modifiers,
            image_bem_extra: fields.image.image_bem_extra,
            attributes: fields.image.image_attributes,
          } %}
        {% endblock %}

      {% endembed %}
      {# /End responsive image field #}

      {# body field #}
      {% embed "@%theme_prefix%-atoms/00-field/_field.twig" with {
        label: fields.body.label,
        label_hidden: fields.body.label_hidden,
        field_name: fields.body.field_name,
        field_type: fields.body.field_type,
        bem_field_modifiers: fields.body.bem_field_modifiers,
        bem_field_extra: fields.body.bem_field_extra,
        attributes: fields.body.attributes,
      } %}

        {% block field_content %}

          {{ fields.body.content | raw }}

        {% endblock %}

      {% endembed %}
      {# /End body field #}

      {# link field #}
      {% include "@%theme_prefix%-atoms/01-links/00-link/styleguide/link-field.twig" with {
        label: fields.link.label,
        label_hidden: fields.link.label_hidden,
        field_name: fields.link.field_name,
        field_type: fields.link.field_type,
        bem_field_modifiers: fields.link.bem_field_modifiers,
        bem_field_extra: fields.link.bem_field_extra,
        attributes: fields.link.attributes,
        link_content: fields.link.link_content,
        link_url: fields.link.link_url,
        link_attributes: fields.link.link_attributes,
        no_link: fields.link.no_link,
      } %}
      {# Endlink field #}

      {# title_description field #}
      {% include "@%theme_prefix%-atoms/title-description/styleguide/title-description.twig" with {
        label: fields.title_description.label,
        label_hidden: fields.title_description.label_hidden,
        field_name: fields.title_description.field_name,
        field_type: fields.title_description.field_type,
        bem_field_modifiers: fields.title_description.bem_field_modifiers,
        bem_field_extra: fields.title_description.bem_field_extra,
        attributes: fields.title_description.attributes,
        field_name: fields.title_description.field_name,
        items: fields.title_description.items,
        multiple: fields.title_description.multiple,
      } %}
      {# /End title_description field #}

      {# button field #}
      {% include "@%theme_prefix%-atoms/06-buttons/styleguide/buttons.twig" with {
          field_name: fields.buttons.field_name,
          field_type: fields.buttons.field_type,
          label_hidden: fields.buttons.label_hidden,
          items: fields.buttons.items
        }
      %}
      {# /End button field #}

  {% endblock %}

{% endembed %}
