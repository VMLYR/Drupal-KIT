{% embed "@%theme_prefix%-atoms/05-forms/form-element/_form-element.twig" with {
  name: form_element.name,
  type: form_element.type,
  label_display: form_element.label_display,
  title_display: form_element.title_display,
  type: form_element.type,
  name: form_element.name,
  disabled: form_element.disabled,
  errors: form_element.errors,
  prefix: form_element.prefix,
  suffix: form_element.suffix,
  description_display: form_element.description_display,
  description: form_element.description,
} %}

  {% block form_element_label_before %}
    {% include "@%theme_prefix%-atoms/05-forms/form-label/_form-label.twig" with {
      title: label.title,
      attributes: label.attributes,
      required: label.required,
    } %}
  {% endblock %}

  {% block form_element_content %}

    {% if managed %}

      <div class="js-form-managed-file form-managed-file" id="edit-managed-file--{{count}}">

      {% if file_shown %}

        <input data-drupal-selector="edit-managed-file-fids"
        data-drupal-selector="edit-managed-file-fids"
          type="hidden"
          name="managed_file[fids]"
          value="44"
          class="form__input--hidden"
        />

        {# <span data-drupal-selector="edit-managed-file-file-44-filename" class="file file--mime-image-jpeg file--image file--file file--mime-image-jpeg file--image">
          <i class="icon icon--mime-image-jpeg icon--image icon--file file--mime-image-jpeg file--image icon--file"></i>
          <a href="http://testfrontendrembrand.docker.localhost/system/temporary?file=oqmzwnd3thu-helloquence.jpg" type="image/jpeg; length=706455">oqmzwnd3thu-helloquence.jpg</a>
        </span> #}

        {% include "@%theme_prefix%-atoms/01-links/file/styleguide/file.twig" with {
          'link_content': 'my-filename.jpg',
          'link_url': '#',
          'attributes': {
            'class': [
              'file--image',
              'mime-image-jpeg',
            ]
          }
        } %}

        {% include "@%theme_prefix%-atoms/05-forms/input/_input.twig" with {
          attributes: {
            class: [
              'js-hide', 'js-form-submit', 'form-submit'
            ],
            name: 'managed_file_remove_button',
            type: 'submit',
            id: 'edit-managed-file-remove-button--7B5LsAD0Rfo',
            'data-drupal-selector': "edit-managed-file-upload-button",
            value: 'Remove',
          },
          styleguide: true,
        } %}

      {% else %}

        {% include "@%theme_prefix%-atoms/05-forms/upload/_upload-file.twig" with {
          attributes: upload.attributes,
        } %}

        {% include "@%theme_prefix%-atoms/05-forms/input/_input.twig" with {
          attributes: input.attributes,
        } %}

        {% if loader %}
          <div class="ajax-progress ajax-progress-throbber"><div class="throbber">&nbsp;</div></div>
        {% endif %}

        <input data-drupal-selector="edit-managed-file-fids"
          type="hidden"
          name="managed_file[fids]"
          value=""
          class="form__input--hidden"
        />
      {% endif %}

      </div>

    {% else %}

      {% include "@%theme_prefix%-atoms/05-forms/upload/_upload-file.twig" with {
        attributes: upload.attributes,
      } %}
    {% endif %}

  {% endblock %}

  {% block form_element_label_after %}
    {% include "@%theme_prefix%-atoms/05-forms/form-label/_form-label.twig" with {
      title: label.title,
      attributes: label.attributes,
      required: label.required,
    } %}
  {% endblock %}



{% endembed %}
