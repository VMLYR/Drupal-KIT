{% embed "@%theme_prefix%-atoms/00-field/_field.twig" with {
  label: label,
  label_hidden: label_hidden,
  field_name: field_name,
  field_type: field_type,
  bem_field_modifiers: bem_field_modifiers,
  bem_field_extra: bem_field_extra,
  attributes: attributes,
  items: items,
  multiple: multiple,
} %}
  {% block field_content_items %}

    {% for item in items %}
      {% embed "@%theme_prefix%-atoms/00-field/_field-item.twig" with {} %}
        {% block fielditem_content %}
          <a href="mailto:{{item.mail}}">{{item.mail}}</a>
        {% endblock %}
      {% endembed %}
    {% endfor %}
  {% endblock %}
{% endembed %}
